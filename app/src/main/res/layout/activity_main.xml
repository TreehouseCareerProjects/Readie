<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@color/shadow_green">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/launchBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mainpage_bg"
            android:scaleType="fitXY"
            android:layout_weight="50" />

        <TextView
            android:id="@+id/recommendationLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/recommendation_top_margin"
            android:layout_marginBottom="@dimen/recommendation_bottom_margin"
            android:text="@string/recommendation_prompt"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="@dimen/recommendation_text_size" />

        <ListView
            android:id="@+id/recommendationList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/list_margin_horizontal"
            android:layout_marginRight="@dimen/list_margin_horizontal"
            android:divider="@android:color/transparent"
            android:dividerHeight="5dp"
            android:layout_weight="50" />

    </LinearLayout>

</RelativeLayout>
