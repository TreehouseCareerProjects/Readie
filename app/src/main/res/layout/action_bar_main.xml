<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:background="@color/saddle">

    <TextView
        android:id="@+id/mainActionBarTitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:paddingLeft="@dimen/action_bar_main_title_padding_horizontal"
        android:paddingRight="@dimen/action_bar_main_title_padding_horizontal"
        android:text="@string/action_bar_main_title"
        android:textSize="@dimen/action_bar_main_title_text_size"
        android:textColor="@color/bianca"/>

    <android.support.v7.widget.SearchView
        android:id="@+id/mainSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/action_icon_padding_horizontal"
        android:paddingLeft="@dimen/action_icon_padding_horizontal"
        android:maxWidth="250dp">
    </android.support.v7.widget.SearchView>

</RelativeLayout>