<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="treehousecareerprojects.readie.ReviewActivity"
            android:background="@drawable/bg_gradient"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/review_text_background"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/titleLabel"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/title_text_size"
                    android:layout_marginLeft="@dimen/title_margin_horizontal"
                    android:layout_marginRight="@dimen/title_margin_horizontal"
                    android:layout_marginTop="@dimen/title_margin_top"
                    android:gravity="center_horizontal"
                    tools:text="Book Title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/authorLabel"
                    android:layout_marginBottom="@dimen/author_margin_vertical"
                    android:layout_marginTop="@dimen/author_margin_vertical"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/author_text_size"
                    android:layout_gravity="center"
                    tools:text="Author Name" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description_label"
                android:id="@+id/descriptionLabel"
                android:textSize="@dimen/description_text_size"
                android:layout_marginTop="@dimen/description_margin_top"
                android:layout_marginLeft="@dimen/description_margin_left" />

            <TextView
                android:id="@+id/reviewLabel"
                android:background="@color/review_text_background"
                android:minHeight="450dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/review_padding_horizontal"
                android:paddingRight="@dimen/review_padding_horizontal"
                android:paddingTop="@dimen/review_padding_vertical"
                android:paddingBottom="@dimen/review_padding_vertical" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/indeterminateProgressView"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </FrameLayout>

</ScrollView>
